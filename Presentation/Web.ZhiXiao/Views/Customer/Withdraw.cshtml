@model CustomerWithdrawModel

    @{
        //page title
        ViewBag.Title = "资金提现";
        //active menu item (system name)
        Html.SetActiveMenuItemSystemName("Withdraw money");
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="content-header clearfix">
            <h1 class="pull-left">
                资金提现
            </h1>
        </div>

        @Html.ValidationSummary(true)

        <div class="content">
            <div class="form-horizontal">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <div class="label-wrapper">
                                        <label class="control-label" for="Name" title="">
                                            当前电子币为
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="form-text-row">
                                        @Model.MaxAmount
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <div class="label-wrapper">
                                        <label class="control-label" for="amount"
                                               title="">提取金额</label>
                                        <div class="ico-help" title="输入提取金额, 必须为100的整数倍, 最多输入@(Model.MaxAmount)">
                                            <i class="fa fa-question-circle"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    @Html.NopEditorFor(model => model.Amount)
                                    @Html.ValidationMessageFor(model => model.Amount)
                                    <script>
                                    $(document).ready(function () {
                                        $(@Html.FieldIdFor(model => model.Amount)).kendoNumericTextBox({
                                            format: "n0",
                                            step: 500,
                                            value: @Model.Amount,
                                            min: 100,
                                            max: @Model.MaxAmount,
                                            placeholder: "输入金额"
                                        });
                                    });
                                    </script>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-9">
                                    <p class="red">
                                        提现会收取5%的手续费, 不足一个电子币按一个计算
                                    </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-9">
                                    <button type="submit" name="save" class="btn bg-blue">
                                        <i class="fa fa-floppy-o"></i>
                                        提现
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }