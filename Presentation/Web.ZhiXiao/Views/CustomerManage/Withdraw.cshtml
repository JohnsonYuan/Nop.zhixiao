@model WithdrawLogSearchModel

@{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    // page title
    ViewBag.Title = "提现申请";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Withdraw Money");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            提现申请
        </h1>
    </div>

    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-search">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.NopLabelFor(Model => Model.IsDone)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.NopDropDownListFor(Model => Model.IsDone, Model.LogStatus)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.NopLabelFor(Model => Model.CreatedOnFrom)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.NopEditorFor(model => model.CreatedOnFrom)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.NopLabelFor(model => model.CreatedOnTo)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.NopEditorFor(model => model.CreatedOnTo)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-md-offset-4">
                                <button type="button" id="search-teams" class="btn btn-primary btn-search">
                                    <i class="fa fa-search"></i>
                                    @T("Admin.Common.Search")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="withdraws-grid"></div>
                        <script type="text/x-kendo-template" id="editTemplate">
                            #if(IsDone){#
                                <button type="button" class="btn btn-success disabled">已处理</button>
                            #}else{#
                                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="\\#process-window" data-id="#=Id#" data-amount="#=Amount#" data-user="#=CustomerNickName# (#=CustomerUserName#)">处理</button>
                            #}#
                        </script>
                        <script>
                            $(document).ready(function () {
                                $("#withdraws-grid").kendoGrid({
                                    dataSource: {
                                        type: "json",
                                        transport: {
                                            read: {
                                                url: "@Html.Raw(Url.Action("Withdraw", "CustomerManage"))",
                                                type: "POST",
                                                dataType: "json",
                                                data: additionalData
                                            }
                                        },
                                        schema: {
                                            data: "Data",
                                            total: "Total",
                                            errors: "Errors"
                                        },
                                        error: function (e) {
                                            display_kendoui_grid_error(e);
                                            // Cancel the changes
                                            this.cancelChanges();
                                        },
                                        pageSize: @(defaultGridPageSize),
                                        serverPaging: true,
                                        serverFiltering: true,
                                        serverSorting: true
                                    },
                                    pageable: {
                                        refersh: true,
                                        pageSizes: [@(gridPageSizes)],
                                        @Html.Partial("_GridPagerMessages")
                                    },
                                    scrollable: false,
                                    //dataBound: onDataBound,
                                    columns: [
                                        {
                                            field: "CustomerNickName",
                                            title: "用户",
                                            width: 100,
                                            template: '<a target="_blank" href="/CustomerManage/Edit/#=Id#">#=CustomerNickName#</a>'
                                        }, {
                                            //field: "Amount",
                                            title: "提取金额",
                                            width: 100,
                                            template: '<span class="btn bg-green">#=Amount#</span>'
                                        }, {
                                            field: "MoneyNum",
                                            title: "余额",
                                            width: 50
                                        },
                                        {
                                            field: "CreatedOn",
                                            title: "@T("Admin.Customers.Customers.Fields.CreatedOn")",
                                            width: 120,
                                            type: "date",
                                            format: "{0:G}"
                                        },
                                        {
                                            title: "处理日期",
                                            width: 120,
                                            type: "date",
                                            format: "{0:G}",
                                            field: 'CompleteOn'
                                            //template: '#if(#=IsDone#){# <span class="badge bg-blue">#=CompleteOn#</span> #} else {# #=<span class="badge bg-red">未处理</span># #}#'
                                        },
                                        {
                                            field: "Id",
                                            title: "操作",
                                            width: 50,
                                            headerAttributes: { style: "text-align:center" },
                                            attributes: { style: "text-align:center" },
                                            template: kendo.template($("#editTemplate").html())
                                        }
                                    ]
                                });
                            });
                        </script>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                //search button
                                $('#search-teams').click(function () {
                                    var grid = $('#withdraws-grid').data('kendoGrid');
                                    grid.dataSource.page(1); // new search. Set page size to 1
                                    //grid.dataSource.read(); we already loaded the grid above using "page" function
                                    //clear selected checkboxes
                                    $('.checkboxGroups').attr('checked', false).change();
                                    selectedIds = [];
                                    return false;
                                });
                                
                            });

                            function additionalData() {
                                var data = {
                                    IsDone: $('#@Html.FieldIdFor(model => model.IsDone)').val(),
                                    CreatedOnFrom: $('#@Html.FieldIdFor(model => model.CreatedOnFrom)').val(),
                                    CreatedOnTo: $('#@Html.FieldIdFor(model => model.CreatedOnTo)').val()
                                };
                                addAntiForgeryToken(data);
                                return data;
                            }
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@*process email form*@
<div id="process-window" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="process-window-title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="process-window-title">同意提现申请?</h4>
            </div>
            @using (Html.BeginForm("ProcessWithdraw", "CustomerManage"))
            {
                <div class="form-horizontal">
                    <div class="modal-body">
                        @Html.AntiForgeryToken()

                        <div>
                            <label class="col-form-label">用户:</label>
                            <span id="user"></span>
                        </div>
                        <div>
                            <label class="col-form-label">提现金额:</label>
                            <span id="amount"></span>
                        </div>
                        <input id="wId" type="hidden" value="" />
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary">
                            已处理
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#process-window').on('show.bs.modal', function (e) {
        var button = $(e.relatedTarget);

        var modal = $(this);
        $('#user', $(this)).text(button.data('user'));
        $('#amount', $(this)).text(button.data('amount'));
        $('#wId', $(this)).text(button.data('id'));
        //button.data('id');
    });
</script>
